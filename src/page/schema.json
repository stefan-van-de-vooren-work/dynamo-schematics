{
    "$schema": "http://json-schema.org/schema",
    "id": "SchematicsSenses IonicAngularPage",
    "title": "Senses Page Options Schema",
    "type": "object",
    "properties": {
        "applications": {
            "type": "string",
            "description": "Comma separated list of applications where routing to the page should be added to",
            "alias": "apps"
        },
        "name": {
            "type": "string",
            "description": "The name of the page",
            "$default": {
                "$source": "argv",
                "index": 0
            }
        },
        "prefix": {
            "type": "string",
            "description": "The prefix to apply to generated selectors when more then one application is defined",
            "alias": "p",
            "oneOf": [
                {
                    "maxLength": 0
                },
                {
                    "minLength": 1,
                    "format": "html-selector"
                }
            ],
            "default": "senses"
        },
        "path": {
            "type": "string",
            "description": "root folder of the pages",
            "default": "./libs/pages/"
        },
        "styleext": {
            "type": "string",
            "description": "The file extension of the style file for the page",
            "default": "scss"
        },
        "spec": {
            "type": "boolean",
            "description": "Specifies if a spec file is generated",
            "default": true
        },
        "flat": {
            "type": "boolean",
            "description": "Flag to indicate if a dir is created",
            "default": false
        },
        "selector": {
            "type": "string",
            "format": "html-selector",
            "description": "The selector to use for the page"
        },
        "routePath": {
            "type": "string",
            "description": "path the route should be",
            "default": ""
        }
    },
    "required": []
}
